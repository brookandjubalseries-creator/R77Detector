<Window x:Class="R77DetectorGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="R77 Rootkit Detector"
        Height="800" Width="1100"
        MinHeight="600" MinWidth="800"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Animations -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0.4" To="1" Duration="0:0:1"
                           AutoReverse="True"/>
        </Storyboard>

        <Storyboard x:Key="ScanLineAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)"
                           From="-50" To="600" Duration="0:0:3"/>
        </Storyboard>
    </Window.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8">
        <Grid>
            <!-- Background Grid Pattern -->
            <Canvas ClipToBounds="True" Opacity="0.03">
                <Canvas.Background>
                    <DrawingBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                        <DrawingBrush.Drawing>
                            <GeometryDrawing>
                                <GeometryDrawing.Geometry>
                                    <GeometryGroup>
                                        <LineGeometry StartPoint="0,0" EndPoint="20,0"/>
                                        <LineGeometry StartPoint="0,0" EndPoint="0,20"/>
                                    </GeometryGroup>
                                </GeometryDrawing.Geometry>
                                <GeometryDrawing.Pen>
                                    <Pen Brush="{StaticResource CyanAccentBrush}" Thickness="0.5"/>
                                </GeometryDrawing.Pen>
                            </GeometryDrawing>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Canvas.Background>
            </Canvas>

            <!-- Scan Line Effect (visible during scan) -->
            <Canvas x:Name="ScanLineCanvas" ClipToBounds="True" Visibility="Collapsed">
                <Rectangle x:Name="ScanLine" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
                          Height="50" Canvas.Top="-50">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="Transparent" Offset="0"/>
                            <GradientStop Color="#2000ffd5" Offset="0.5"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Canvas>

            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title Bar -->
                <Border Grid.Row="0" Background="{StaticResource BackgroundMidBrush}"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                            <!-- Logo -->
                            <TextBlock Text="◆" Foreground="{StaticResource CyanAccentBrush}"
                                      FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="R77" Foreground="{StaticResource CyanAccentBrush}"
                                      FontFamily="{StaticResource MonoFont}" FontWeight="Bold"
                                      FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="DETECTOR" Foreground="{StaticResource TextSecondaryBrush}"
                                      FontFamily="{StaticResource MonoFont}" FontWeight="Light"
                                      FontSize="14" VerticalAlignment="Center" Margin="6,0,0,0"/>
                            <TextBlock Text="v2.0" Foreground="{StaticResource TextDimBrush}"
                                      FontFamily="{StaticResource MonoFont}" FontSize="10"
                                      VerticalAlignment="Center" Margin="12,0,0,2"/>
                        </StackPanel>

                        <!-- Window Controls -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="─" Click="MinimizeButton_Click"
                                    Style="{x:Null}" Background="Transparent"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    BorderThickness="0" Width="46" Height="40"
                                    FontFamily="{StaticResource MonoFont}" Cursor="Hand"/>
                            <Button Content="□" Click="MaximizeButton_Click"
                                    Style="{x:Null}" Background="Transparent"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    BorderThickness="0" Width="46" Height="40"
                                    FontFamily="{StaticResource MonoFont}" Cursor="Hand"/>
                            <Button Content="✕" Click="CloseButton_Click"
                                    Style="{x:Null}" Background="Transparent"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    BorderThickness="0" Width="46" Height="40"
                                    FontFamily="{StaticResource MonoFont}" Cursor="Hand"
                                    MouseEnter="CloseButton_MouseEnter"
                                    MouseLeave="CloseButton_MouseLeave"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Header Section -->
                <Border Grid.Row="1" Padding="32,24" Background="{StaticResource BackgroundMidBrush}"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Title and Status -->
                        <StackPanel Grid.Column="0">
                            <TextBlock FontFamily="{StaticResource MonoFont}" FontSize="11"
                                      Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,4">
                                <Run Text="SYSTEM://"/>
                                <Run Text="ROOTKIT_SCANNER" Foreground="{StaticResource CyanDimBrush}"/>
                            </TextBlock>

                            <TextBlock x:Name="StatusTitle" Text="READY TO SCAN"
                                      FontFamily="{StaticResource MonoFont}"
                                      FontSize="28" FontWeight="Bold"
                                      Foreground="{StaticResource TextPrimaryBrush}"/>

                            <TextBlock x:Name="StatusSubtitle"
                                      Text="Initialize deep system analysis for r77-rootkit indicators"
                                      FontFamily="{StaticResource MonoFont}" FontSize="12"
                                      Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,0"/>
                        </StackPanel>

                        <!-- Right: Scan Button -->
                        <Button x:Name="ScanButton" Grid.Column="1"
                                Style="{StaticResource ScanButtonStyle}"
                                Click="ScanButton_Click" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="ScanButtonIcon" Text="▶" Margin="0,0,12,0" FontSize="14"/>
                                <TextBlock x:Name="ScanButtonText" Text="START SCAN"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Main Content -->
                <Grid Grid.Row="2" Margin="32,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel: System Status -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="SYSTEM STATUS" FontFamily="{StaticResource MonoFont}"
                                  FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextDimBrush}"
                                  Margin="0,0,0,16"/>

                        <!-- Status Cards -->
                        <Border Style="{StaticResource StatusCardStyle}" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="RegistryIndicator" Width="10" Height="10"
                                        Fill="{StaticResource TextDimBrush}" Margin="0,0,12,0"/>
                                <TextBlock Grid.Column="1" Text="Registry Scan"
                                          FontFamily="{StaticResource MonoFont}" FontSize="12"
                                          Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                <TextBlock x:Name="RegistryStatus" Grid.Column="2" Text="PENDING"
                                          FontFamily="{StaticResource MonoFont}" FontSize="10"
                                          Foreground="{StaticResource TextDimBrush}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource StatusCardStyle}" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="ProcessIndicator" Width="10" Height="10"
                                        Fill="{StaticResource TextDimBrush}" Margin="0,0,12,0"/>
                                <TextBlock Grid.Column="1" Text="Process Analysis"
                                          FontFamily="{StaticResource MonoFont}" FontSize="12"
                                          Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                <TextBlock x:Name="ProcessStatus" Grid.Column="2" Text="PENDING"
                                          FontFamily="{StaticResource MonoFont}" FontSize="10"
                                          Foreground="{StaticResource TextDimBrush}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource StatusCardStyle}" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="FileSystemIndicator" Width="10" Height="10"
                                        Fill="{StaticResource TextDimBrush}" Margin="0,0,12,0"/>
                                <TextBlock Grid.Column="1" Text="Filesystem Scan"
                                          FontFamily="{StaticResource MonoFont}" FontSize="12"
                                          Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                <TextBlock x:Name="FileSystemStatus" Grid.Column="2" Text="PENDING"
                                          FontFamily="{StaticResource MonoFont}" FontSize="10"
                                          Foreground="{StaticResource TextDimBrush}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource StatusCardStyle}" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="IntegrityIndicator" Width="10" Height="10"
                                        Fill="{StaticResource TextDimBrush}" Margin="0,0,12,0"/>
                                <TextBlock Grid.Column="1" Text="Integrity Check"
                                          FontFamily="{StaticResource MonoFont}" FontSize="12"
                                          Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                <TextBlock x:Name="IntegrityStatus" Grid.Column="2" Text="PENDING"
                                          FontFamily="{StaticResource MonoFont}" FontSize="10"
                                          Foreground="{StaticResource TextDimBrush}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource StatusCardStyle}" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="SyscallIndicator" Width="10" Height="10"
                                        Fill="{StaticResource TextDimBrush}" Margin="0,0,12,0"/>
                                <TextBlock Grid.Column="1" Text="Syscall Analysis"
                                          FontFamily="{StaticResource MonoFont}" FontSize="12"
                                          Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                <TextBlock x:Name="SyscallStatus" Grid.Column="2" Text="PENDING"
                                          FontFamily="{StaticResource MonoFont}" FontSize="10"
                                          Foreground="{StaticResource TextDimBrush}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource StatusCardStyle}" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="SignatureIndicator" Width="10" Height="10"
                                        Fill="{StaticResource TextDimBrush}" Margin="0,0,12,0"/>
                                <TextBlock Grid.Column="1" Text="Signature Scan"
                                          FontFamily="{StaticResource MonoFont}" FontSize="12"
                                          Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                <TextBlock x:Name="SignatureStatus" Grid.Column="2" Text="PENDING"
                                          FontFamily="{StaticResource MonoFont}" FontSize="10"
                                          Foreground="{StaticResource TextDimBrush}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Summary Stats -->
                        <Border Background="{StaticResource BackgroundLightBrush}"
                                CornerRadius="6" Padding="16" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="THREAT SUMMARY" FontFamily="{StaticResource MonoFont}"
                                          FontSize="10" FontWeight="Bold" Foreground="{StaticResource TextDimBrush}"
                                          Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,0,12">
                                        <TextBlock x:Name="CriticalCount" Text="0" FontFamily="{StaticResource MonoFont}"
                                                  FontSize="24" FontWeight="Bold" Foreground="{StaticResource RedAlertBrush}"/>
                                        <TextBlock Text="CRITICAL" FontFamily="{StaticResource MonoFont}"
                                                  FontSize="9" Foreground="{StaticResource TextDimBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,0,12">
                                        <TextBlock x:Name="HighCount" Text="0" FontFamily="{StaticResource MonoFont}"
                                                  FontSize="24" FontWeight="Bold" Foreground="{StaticResource OrangeWarningBrush}"/>
                                        <TextBlock Text="HIGH" FontFamily="{StaticResource MonoFont}"
                                                  FontSize="9" Foreground="{StaticResource TextDimBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="1">
                                        <TextBlock x:Name="MediumCount" Text="0" FontFamily="{StaticResource MonoFont}"
                                                  FontSize="24" FontWeight="Bold" Foreground="{StaticResource YellowCautionBrush}"/>
                                        <TextBlock Text="MEDIUM" FontFamily="{StaticResource MonoFont}"
                                                  FontSize="9" Foreground="{StaticResource TextDimBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Grid.Row="1">
                                        <TextBlock x:Name="LowCount" Text="0" FontFamily="{StaticResource MonoFont}"
                                                  FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Text="LOW/INFO" FontFamily="{StaticResource MonoFont}"
                                                  FontSize="9" Foreground="{StaticResource TextDimBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Right Panel: Detection Results -->
                    <Border Grid.Column="2" Background="{StaticResource BackgroundMidBrush}"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                            CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Results Header -->
                            <Border Grid.Row="0" Background="{StaticResource BackgroundLightBrush}"
                                    CornerRadius="8,8,0,0" Padding="20,14">
                                <Grid>
                                    <TextBlock Text="DETECTION LOG" FontFamily="{StaticResource MonoFont}"
                                              FontSize="11" FontWeight="Bold"
                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="DetectionCount" Text="0 entries"
                                              HorizontalAlignment="Right"
                                              FontFamily="{StaticResource MonoFont}" FontSize="11"
                                              Foreground="{StaticResource TextDimBrush}"/>
                                </Grid>
                            </Border>

                            <!-- Results List -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Disabled" Padding="8">
                                <ItemsControl x:Name="DetectionList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="8,4" Padding="16,12" CornerRadius="4"
                                                    Background="{StaticResource SurfaceBrush}"
                                                    BorderThickness="1,1,1,1">
                                                <Border.BorderBrush>
                                                    <SolidColorBrush Color="{Binding BorderColor}"/>
                                                </Border.BorderBrush>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Severity Badge -->
                                                    <Border Grid.Column="0" CornerRadius="3"
                                                            Padding="8,4" Margin="0,0,14,0"
                                                            VerticalAlignment="Top">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="{Binding SeverityColor}" Opacity="0.2"/>
                                                        </Border.Background>
                                                        <TextBlock Text="{Binding Severity}"
                                                                  FontFamily="{StaticResource MonoFont}"
                                                                  FontSize="9" FontWeight="Bold">
                                                            <TextBlock.Foreground>
                                                                <SolidColorBrush Color="{Binding SeverityColor}"/>
                                                            </TextBlock.Foreground>
                                                        </TextBlock>
                                                    </Border>

                                                    <!-- Detection Info -->
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Category}"
                                                                  FontFamily="{StaticResource MonoFont}"
                                                                  FontSize="10"
                                                                  Foreground="{StaticResource TextDimBrush}"
                                                                  Margin="0,0,0,4"/>
                                                        <TextBlock Text="{Binding Description}"
                                                                  FontFamily="{StaticResource MonoFont}"
                                                                  FontSize="12" TextWrapping="Wrap"
                                                                  Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Empty State -->
                            <StackPanel x:Name="EmptyState" Grid.Row="1"
                                       VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="◇" FontSize="48"
                                          Foreground="{StaticResource TextDimBrush}"
                                          HorizontalAlignment="Center" Margin="0,0,0,16"/>
                                <TextBlock Text="No detections yet"
                                          FontFamily="{StaticResource MonoFont}"
                                          FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Start a scan to analyze your system"
                                          FontFamily="{StaticResource MonoFont}"
                                          FontSize="11" Foreground="{StaticResource TextDimBrush}"
                                          HorizontalAlignment="Center" Margin="0,6,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Footer / Progress Bar -->
                <Border Grid.Row="3" Background="{StaticResource BackgroundMidBrush}"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0"
                        Padding="32,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Progress Section -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock x:Name="ProgressText" Text="Ready"
                                      FontFamily="{StaticResource MonoFont}" FontSize="11"
                                      Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <Border Height="4" CornerRadius="2" Background="{StaticResource BackgroundLightBrush}">
                                <Border x:Name="ProgressBar" Height="4" CornerRadius="2"
                                       Background="{StaticResource CyanAccentBrush}"
                                       HorizontalAlignment="Left" Width="0"/>
                            </Border>
                        </StackPanel>

                        <!-- Timestamp -->
                        <TextBlock x:Name="TimestampText" Grid.Column="1"
                                  Text="" FontFamily="{StaticResource MonoFont}"
                                  FontSize="10" Foreground="{StaticResource TextDimBrush}"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
