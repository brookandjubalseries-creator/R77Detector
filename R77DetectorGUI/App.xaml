<Application x:Class="R77DetectorGUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Fonts -->
        <FontFamily x:Key="DisplayFont">Consolas</FontFamily>
        <FontFamily x:Key="MonoFont">Cascadia Code, Consolas, Courier New</FontFamily>

        <!-- Core Colors - Cyber Terminal Theme -->
        <Color x:Key="BackgroundDark">#0a0a0f</Color>
        <Color x:Key="BackgroundMid">#12121a</Color>
        <Color x:Key="BackgroundLight">#1a1a25</Color>
        <Color x:Key="SurfaceColor">#1e1e2a</Color>
        <Color x:Key="BorderColor">#2a2a3a</Color>

        <!-- Accent Colors -->
        <Color x:Key="CyanAccent">#00ffd5</Color>
        <Color x:Key="CyanDim">#00a88a</Color>
        <Color x:Key="RedAlert">#ff3a5c</Color>
        <Color x:Key="OrangeWarning">#ff9f43</Color>
        <Color x:Key="YellowCaution">#ffd93d</Color>
        <Color x:Key="GreenSafe">#00ff88</Color>
        <Color x:Key="PurpleInfo">#a855f7</Color>

        <!-- Text Colors -->
        <Color x:Key="TextPrimary">#e8e8f0</Color>
        <Color x:Key="TextSecondary">#8888a0</Color>
        <Color x:Key="TextDim">#505068</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
        <SolidColorBrush x:Key="BackgroundMidBrush" Color="{StaticResource BackgroundMid}"/>
        <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

        <SolidColorBrush x:Key="CyanAccentBrush" Color="{StaticResource CyanAccent}"/>
        <SolidColorBrush x:Key="CyanDimBrush" Color="{StaticResource CyanDim}"/>
        <SolidColorBrush x:Key="RedAlertBrush" Color="{StaticResource RedAlert}"/>
        <SolidColorBrush x:Key="OrangeWarningBrush" Color="{StaticResource OrangeWarning}"/>
        <SolidColorBrush x:Key="YellowCautionBrush" Color="{StaticResource YellowCaution}"/>
        <SolidColorBrush x:Key="GreenSafeBrush" Color="{StaticResource GreenSafe}"/>
        <SolidColorBrush x:Key="PurpleInfoBrush" Color="{StaticResource PurpleInfo}"/>

        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="TextDimBrush" Color="{StaticResource TextDim}"/>

        <!-- Glow Effect -->
        <DropShadowEffect x:Key="CyanGlow" Color="{StaticResource CyanAccent}" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
        <DropShadowEffect x:Key="RedGlow" Color="{StaticResource RedAlert}" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
        <DropShadowEffect x:Key="GreenGlow" Color="{StaticResource GreenSafe}" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>

        <!-- Scan Button Style -->
        <Style x:Key="ScanButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource CyanAccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CyanAccentBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="{StaticResource MonoFont}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="40,20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource CyanAccent}" Opacity="0.15"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Effect" Value="{StaticResource CyanGlow}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource CyanAccent}" Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Card Style -->
        <Style x:Key="StatusCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>

        <!-- ScrollBar Style -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
        </Style>

    </Application.Resources>
</Application>
